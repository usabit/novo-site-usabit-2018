
// Banner Complementary
.banner-complementary{
    min-height: 165px;
    border-radius: 3px;
    .wrapper{
        .banner-complementary-arrow{
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 32px 32px 0 0;
            border-color: #56cbf2 transparent transparent transparent;
            line-height: 0px;
            margin-left: 2px;
        }
        p,
        h2{
            font-weight: 300;
            color: #fff;
        }
        p{
            font-size: 3.2rem;
            margin: 10px 0;
        }
        h2{
            font-size: 4.5rem;
        }
    }    
}

