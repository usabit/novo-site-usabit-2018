.btn {
	min-width: 243px;
	font-weight: 300;
	font-size: 1.8rem; // 18/10px = 1.8rem
	padding: .66em 1.66em; // 12/18px = .66em e 30/18px = 1.66em
	border-radius: 3px;
	color: black;
	cursor: pointer;
	transition: all .2s ease-out;
	display: inline-block;
    text-align: center;
	+below('mobile'){
		display: block;
	}
	&.white {
		border: 1px solid white;
		background: white;
		color: $text-secondary;
		letter-spacing: 1px;
		&:hover {
			background: @background - 15%;
			border-color: @background;
		}
	}
	&.outline-white {
		border: 1px solid white;
		background: transparent;
		color: white;
		letter-spacing: 1px;
		&:hover {
			border-color: white;
			background: white;
			color: $text-secondary;
		}
	}
	&.green {
		border: 1px solid $color-positive;
		background: $color-positive;
		color: white;
		letter-spacing: 1px;
		&:hover {
			background: @background - 15%;
			border-color: @background;
		}
	}
	&.blue {
		border: 1px solid #3BA0E5;
		background: #3BA0E5;
		color: white;
		letter-spacing: 1px;
		&:hover {
			background: @background - 15%;
			border-color: @background;
		}
	}
	&.black {
		border: 1px solid black;
		background-color: black;
		color: white;
	}
	&.submit {
		border: 1px solid #6474FF;
		background: #6474FF;
		color: white;
		&:hover {
			background: @background - 5%;
			border-color: @background;
		}
	}
}