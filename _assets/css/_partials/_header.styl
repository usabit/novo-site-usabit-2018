.site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    //background: #1c1c1c;
    background: transparent;
    z-index: 100;
    height: 50px;
    min-height: 50px;
    max-height: 50px;
    display: flex;
    align-items: center;
    +below('mobile') {
        padding: 15px 0;
    }
    .wrapper {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    &__logo {
        display: inline-flex;
        align-items: flex-start;
        img {
            width: 45px;
            margin-right: 14px;

            +below('small-tablet') {
                width: 35px;
            }
            +below('mobile') {
                width: 25px;
            }
        }
        svg {
            width: 84px;
            path {
                fill: white;
            }
            +below('small-tablet') {
                width: 65px;
            }
            +below('mobile') {
                width: 45px;
            }
        }
    }
    &__navigation, &__menu-list {
        display: flex;
        align-items: center;
    }
    &__menu {
        +below('small-tablet') {
            display: none;
        }
    }
    &__menu-item {
        margin-right: 46px;
    }
    &__menu-link {
        color: black;
        font-size: 17px;
        font-weight: 400;
        transition: all 250ms;
        &:hover, &:active, &.active {
            //color: $blue5;
            font-weight: 700;
            text-decoration: none;
            transition: all 250ms;
        }
    }
    &__hire-us {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 184px;
        height: 50px;
        line-height: 30px;
        background-color: white;
        color: black;
        font-size: 1.4rem;
        font-weight: 300;
        text-transform: uppercase;
        margin-right: 35px;
        &:hover {
            text-decoration: none;
            background-color: #333333;
            color: white;
        }
        +below(400px) {
            display: none;
        }
    }
    &__language {
        display: inline-block;
        width: 30px;
        height: 30px;
        line-height: 30px;
        border: 1px solid white;
        border-radius: 50%;
        color: white;
        font-size: 11px;
        font-weight: 400;
        text-align: center;
        text-transform: uppercase;

        +below('mobile') {
            width: 25px;
            height: 25px;
            line-height: 25px;
        }
        &:hover {
            text-decoration: none;
            color: white;
            opacity: .8;
        }
    }
    &__messenger, &__open-menu {
        margin-left: 34px;
    }
    &__messenger {
        position: relative;
        width: 32px;
        height: 32px;

        +below('mobile') {
            width: 25px;
            height: 25px;
            margin: 0 15px;
        }

        .icon {
            width: 30px;
            height: 30px;
            cursor: pointer;

            +below('mobile') {
                width: 25px;
                height: 25px;
            }
        }

        .fb-page {
            position: absolute;
            top: 38px;
            right: 0;
            width: 0;
            height: 0;
            overflow: hidden;
            opacity: 0;
            transition: opacity 250ms;
        }
        &.active {
            .fb-page {
                width: auto;
                height: auto;
                opacity: 1;
                transition: opacity 500ms;
            }
        }
    }
    &__open-menu {
        display: inline-flex;
        align-items: center;
        +below('mobile') {
            margin: 0 0 0 30px;
            zoom: 0.7;
        }
    }
}
.sidenav {
    position: fixed;
    top: 30px;
    left: -30px;
    bottom: 0;
    display: flex;
    width: 100%;
    height: 100%;
    z-index: 99;
    transition: all 250ms;
    overflow: hidden;
    transform: scale(0);
    transform-origin: top right;

    &.active {
        top: 0;
        left: 0;
        transform: scale(1);
        transition: all 250ms;
    }

    &__close-menu {
        position: absolute;
        top: 30px;
        right: 30px;
        font-size: 0;

        .icon {
            display: inline-block;
            width: 24px;
            height: 24px;
            fill: white;
            opacity: 0.7;
        }

        +below('tablet') {
            top: 20px;
            right: 20px;
            zoom: 0.8;
        }
        +below('small-tablet') {
            zoom: 0.6;
        }
        +below('mobile') {
            top: 15px;
            right: 15px;
            zoom: 0.5;
        }
    }
    &__left {
        display: flex;
        align-items: center;
        justify-content: center;
        flex: 1;
        padding: 15px 15px 55px;
        background: white;
        text-align: center;

        +below('small-tablet') {
            display: none;
        }
    }
    &__logo {
        display: flex;
        align-items: center;
        position: absolute;
        img {
            width: 45px;
            margin-right: 14px;
        }
        svg {
            width: 84px;
            path {
                fill: $text-primary;
            }
        }
    }
    &__social {
        align-self: flex-end;
    }
    &__social-list {
        display: flex;
        align-items: center;
    }
    &__social-item {
        opacity: 1;
        transition: opacity 250ms;
        .social-media-link {
            font-size: 12px;
        }
        &:nth-of-type(1) {
            .fa-circle {
                color: #3b5998;
            }
        }
        &:nth-of-type(2) {
            .fa-circle {
                color: #007ab9;
            }
        }
        &:nth-of-type(3) {
            .fa-circle {
                color: #4176fa;
            }
        }
        &:nth-of-type(4) {
            .fa-circle {
                color: #6a453b;
            }
        }
        &:nth-of-type(5) {
            .fa-circle {
                color: #cb2027;
            }
        }
        &:nth-of-type(6) {
            .fa-circle {
                color: #a9c950;
            }
        }
        &:hover {
            opacity: 0.6;
            transition: opacity 250ms;
        }
    }
    &__right {
        flex: 3;
        padding: 55px;
        background: #1c1c1c;

        +below('desktop') {
            overflow: auto;
        }
        +below('small-tablet') {
            padding: 25px;
        }
        +below('mobile') {
            padding: 15px;
        }

        h1, h2 {
            color: white;
            font-size: 30px;
            font-weight: 300;
        }
        h1 {
            +below('small-tablet') {
                font-size: 25px;
                line-height: 120%;
            }
            +below('mobile') {
                font-weight: 100;
                font-size: 18px;
                line-height: 150%;
            }
        }
    }
    &__nav {
        display: inline-block;
        margin: 70px 50px 0 0;

        +below('mobile') {
            margin: 25px 0 0;
        }

        h2 {
            position: relative;
            padding-left: 45px;
            font-size: 14px;
            font-weight: 700;
            text-transform: uppercase;

            +below('mobile') {
                padding-left: 35px;
                font-size: 12px;
            }

            .icon {
                position: absolute;
                left: 0;
                display: inline-block;
                fill: white;
            }
        }
        &:nth-of-type(1) {
            h2 {
                .icon {
                    top: -5px;
                    width: 26px;
                    height: 26px;
                }
            }
        }
        &:nth-of-type(2) {
            h2 {
                .icon {
                    top: -15px;
                    width: 31px;
                    height: 31px;
                }
            }
        }
        &:nth-of-type(3) {
            h2 {
                .icon {
                    top: -10px;
                    width: 33px;
                    height: 33px;
                }
            }
        }
    }
    &__list {
        margin-top: 20px;
        padding-left: 45px;

        +below('mobile') {
            margin-top: 10px;
            padding-left: 35px;
        }
    }
    &__link {
        color: white;
        line-height: 53px;
        font-size: 22px;
        font-weight: 300;
        opacity: 1;
        transition: opacity 250ms;

        +below('mobile') {
            line-height: 200%;
            font-size: 16px;
        }

        &:hover {
            color: white;
            opacity: 0.6;
            transition: opacity 250ms;
            text-decoration: none;
        }
    }
}
