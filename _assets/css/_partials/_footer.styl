
// Footer
.footer{
    display: inline-block;
    width: 100%;
    background-color: white;
    border-top: 1px solid #BDBDBD;
    padding-top: 35px;
    padding-bottom: 57px;
    .wrapper{
        .footer-topic{
            column(1/5, $cycle: 5);
            &-title{
                height: 48px;
                h2{
                    font-size: 1.4rem;
                    color: black;
                }
                svg {
                    transform: translateY(-40%);
                }
                +below('tablet'){
                    height: 50px;
                }
                +below('mobile'){
                    height: 30px;
                }
            }
            &-list{
                li{
                    font-size: 1.4rem;
                    font-weight: 400;
                    color: black;
                    line-height: 1.2;
                    margin-bottom: 8px;
                    a{
                        font-size: @font-size;
                        font-weight: @font-weight;
                        color: @color;
                        line-height: @line-height;
                    }
                    &:last-child{
                        margin-bottom: 0;
                    }
                }    
            }
            +below('tablet'){
                &:nth-child(-n+4){
                    margin-bottom: 30px;    
                }
                column(1/3, $cycle: 3);
            }
            +below('mobile'){
                column(1, $cycle: 1);
            }
        }
    }
}