
// BANNERS

// Banner top
.banner-top{
    //display: flex;
    //justify-content: flex-start;
    //align-items: flex-end;
    padding-top: 97px;
    padding-bottom: 22px;
    width: 100%;
    z-index: 1;
    .wrapper{
        overflow: initial;
        h1,
        p,
        ul li,
        ul li i,
        ul li a{
            font-size: 3.2rem;
            font-weight: 300;
            color: white;
            +below('mobile'){
                font-size: 3rem;
            }
        }
        ul{
            display: flex;
            justify-content: flex-start;
            align-items: flex-end;
            flex-wrap: wrap;
            list-style-type: none;
            li{
                margin-right: 10px;
                // pen√∫ltimo
                &:nth-last-of-type(-n +2):not(:last-child) a{
                    margin-right: 0;
                }
                &:last-child{
                    display: none;
                }
                a{
                    display: inline-block;
                    text-decoration: none;
                }
            }
        }
    }
}

// Banner Complementary
.banner-complementary{
    padding-bottom: 32px;
    .wrapper{
        .banner-complementary-arrow{
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 32px 32px 0 0;
            border-color: #56cbf2 transparent transparent transparent;
            line-height: 0px;
            margin-left: 2px;
        }
        p,
        h2{            
            color: #F2F2F2;
        }
        p{
            font-size: 2.9rem;
            font-weight: 200;
            margin: 16px 0 6px;
        }
        h2{
            font-weight: 300;
            font-size: 4.7rem;
        }
    }    
}
