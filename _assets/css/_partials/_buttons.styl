.btn {
	font-size: 1.8rem; // 18/10px = 1.8rem
	padding: 0.83em 1.66em; // 15/18px = .83em e 30/18px = 1.66em
	border-radius: 3px;
	color: black;
	cursor: pointer;
	transition: all .2s ease-out;
	display: inline-block;
    text-align: center;
	+below('mobile'){
		display: block;
	}
	&.white {
		border: 1px solid white;
		background: white;
		color: $text-secondary;
		letter-spacing: 1px;
		&:hover {
			background: @background - 15%;
			border-color: @background;
		}
	}
	&.outline-white {
		border: 1px solid white;
		background: transparent;
		color: white;
		letter-spacing: 1px;
		&:hover {
			border-color: white;
			background: white;
			color: $text-secondary;
		}
	}
	&.green {
		border: 1px solid $color-positive;
		background: $color-positive;
		color: white;
		letter-spacing: 1px;
		&:hover {
			background: @background - 15%;
			border-color: @background;
		}
	}
	&.blue {
		border: 1px solid $secondary-color;
		background: $secondary-color;
		color: white;
		letter-spacing: 1px;
		&:hover {
			background: @background - 15%;
			border-color: @background;
		}
	}
	&.black {
		border: 1px solid black;
		background-color: black;
		font-weight: 600;
		color: white;
	}
}