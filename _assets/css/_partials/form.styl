
// Usabit FORM
.usabit-form{
    .usabit-form-content{
        display: flex;
        align-items: stretch;
        padding: 45px 45px 40px;
        +below('small-tablet'){
            flex-direction: column;
            padding: 45px 0;
        }
        .usabit-form-content-info{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            flex: 1;
            padding-right: 45px;
            h2,
            p{
                color: #000000;
                line-height: 1.2;
                +below('small-tablet'){
                    padding-bottom: 24px;
                }
            }
            h2{
                max-width: 647px;
                font-size: 5rem;
                font-weight: 400;
                +below('mobile'){
                    font-size: 4rem;
                }
            }
            p{
                max-width: 752px;
                font-size: 3.2rem;
                font-weight: 300;
                margin-top: 63px;
                +below('mobile'){
                    margin-top: 0;
                }
            }
        }
        .usabit-form-content-inputs{
            width: 428px;
            background-color: #1C415B;
            padding: 24px;
            +below('small-tablet'){
                width: 100%;
            }
            h2{
                margin-top: 30.6px;
            }
            p{
                font-size: 3.2rem;
                font-weight: 200;
                color: #97B3C6;
                line-height: 1.2;
                margin-top: 35px;
                margin-bottom: 70px;
            }
            label{
                font-size: 1.2rem;
                font-weight: 300;
                color: #FFFFFF;
            }
            input[type=text],
            input[type=email]{
                display: inline-block;
                width: 100%;
                background-color: #2A4F69;
                border: 1px solid rgba(86, 204, 242, 0.4);
                outline: none;
                border-radius: 3px;
                padding: 15px;
                margin: 7px 0 18px 0;
                color: white;
            }
            input[name=clientbusiness]{
                margin-bottom: 39px;
            }
            input[type=text]:focus, 
            input[type=email]:focus{
                box-shadow: none;
            }
            input[type=submit]{
                min-width: auto;
                width: 100%;
                margin-bottom: 7px;
            }
        }
    }
}
