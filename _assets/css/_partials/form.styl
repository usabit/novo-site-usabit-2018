// App Form
.app-form{
    .call-to-app-form{
        width: 100%;
        background-color: #263A57;
        padding-top: 90px;
        padding-bottom: 90px;
        .wrapper{
            text-align: center;
            h2{
                font-size: 4rem;
                font-weight: 300;
                color: #F2F2F2;
                line-height: 1.3;
            }
        }
    }
    .the-app-form{
        padding-top: 115px;
        padding-bottom: 115px;
        .the-app-form-inputs{
            width: 90%;
            max-width: 505px;
            margin: 0 auto;
            label{
                display: block;
                font-size: 1.6rem;
                font-weight: 400;
                color: #000000;
                margin-top: 35px;
                margin-bottom: 8px;
                &:first-child{
                    margin-top: 0;
                }
            }
            input[type="text"],
            input[type="email"]{
                background-color: white;
                border: 1px solid #D3D3D3;
                border-radius: 4px;
                display: flex;
                width: 100%;
                padding: 10px 12px;
                outline: none;
                box-shadow: none;
                font-size: 2rem;
                +placeholder(){
                    font-size: 2rem;
                    font-weight: 500;
                    color: #292929;
                }
            }
            input[type=text]:focus, 
            input[type=email]:focus{
                box-shadow: none;
            }
            input[type="submit"]{
                display: block;
                min-width: 100%;
                margin-top: 55px;
                +below('mobile'){
                    min-width: 100%;
                }
            }
            textarea{
                +below('mobile'){
                    min-height: 150px;
                }
            }
        }
    }
}

// Contact Default Form
.default-form{
    label{
        display: block;
        font-size: 1.6rem;
        font-weight: 400;
        color: #000000;
        margin-top: 27px;
        margin-bottom: 4px;
        &:first-child{
            margin-top: 0;
        }
    }
    input[type="text"],
    input[type="email"],
    textarea{
        background-color: #ECECEC;
        border: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        border-radius: 0;
        border-left: 3px solid #56CCF2;
        display: block;
        width: 100%;
        padding: 15px;
        outline: none;
        resize: none;
    }
    textarea{
        min-height: 250px;
        +below('mobile'){
            min-height: 150px;
        }
    }
    input[type=text]:focus, 
    input[type=email]:focus,
    textarea:focus{
        box-shadow: none;
    }
    input[type="submit"]{
        margin-top: 31px;
        float: right;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        +below('mobile'){
            min-width: 100%;
        }
    }
}