// BannerTop Component

.banner-top{
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
    width: 100%;
    height: 211px;
    z-index: 1;
    .wrapper{
        display: flex;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: 28px;
        p,
        ul li,
        ul li i,
        ul li a{
            font-size: 4rem;
            font-weight: 200;
            color: white;
            +below('mobile'){
                font-size: 3rem;
            }
        }
        ul{
            display: @display;
            justify-content: @justify-content;
            align-items: @align-items;
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            li{
                margin-right: 10px;
                &:last-child{
                    margin-right: 0;
                }
                a{
                    display: block;
                    text-align: center;
                    text-decoration: none;
                }
            }
        }
    }
}