// Usabit Especial Card
.made-in-usabit{
    display: inline-block;
    width: 100%;
    height: auto;
    background-color: #F7F7F7;
    padding-top: 90px;
    padding-bottom: 50px;
    .wrapper{
        a.post-card{
            display: inline-block;
            background-color: white;
            width: 418px;
            column(1/3, $cycle: 3);
            figure{
                display: block;
                position: relative;
                width: 100%;
                img.post-thumbnail{
                    width: 100%;
                    /*  418x262
                        Valor padr√£o definido no functions.php
                        do WordPress com base na imagem do Figma!
                    */
                }
                figcaption { 
                    position: absolute;
                    right: 0;
                    bottom: 15px;
                    left: 30px;
                    p{
                        font-size: 3rem;
                        font-weight: 200;
                        color: #FFFFFF;
                    }
                }
            }
            .post-content{
                width: 100%;
                min-height: 223px;
                display: flex;
                flex-direction: column;
                justify-content: flex-start;
                align-items: flex-start;
                flex: 1;
                padding: 30px;
                h3,
                p{
                    font-weight: 300;
                    color: black;
                    max-width: 100%;                    
                    margin: 0;
                    line-height: 1.3;
                }
                h3{
                    font-size: 2rem;
                    margin-bottom: 15px;
                }
                p{
                    font-size: 1.6rem;
                }
                +below('mobile'){
                    min-height: initial;
                }
            }
            +below('tablet'){
                margin-bottom: 3%;
                column(1/2, $cycle: 2);
                &:last-child{
                    margin-bottom: 0;
                }
            }
            +below('mobile'){
                column(1, $cycle: 1);
            }
        }
    }
}