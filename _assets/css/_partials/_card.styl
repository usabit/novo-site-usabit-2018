
// CARDS

// Simple Card
.simple-card{
    display: inline-block;
    width: 100%;
    background-color: white;
    padding-top: 50px;
    padding-bottom: 50px;
    .simple-card-boxes {
        display: inline-block;
        width: 100%;
        margin-top: 4.4rem;
        .simple-card-box,
        .simple-card-box__more-about {
            background-color: white;
            min-height: 150px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 20px;
            &:nth-child(-n+2){
                margin-bottom: 3%;
            }
            column(1/2, $cycle: 2);
            h3,
            p{
                color: #828282;
            }
            h3{
                font-size: 1.6rem;
                font-weight: 400;
                margin-bottom: 10px;
            }
            p{
                font-size: 2.5rem;
                font-weight: 500;
                +below('tablet'){
                    font-size: 2rem;
                }
            }
            +below('mobile'){
                margin-bottom: 3%;
                column(1, $cycle: 1);
                &:last-child{
                    margin-bottom: 0;
                }
            }
        }
        .simple-card-box{
            border: 1px solid $primary-color;
            &:hover {
                -moz-box-shadow:    inset 0 0 0 1px $primary-color;
                -webkit-box-shadow: inset 0 0 0 1px $primary-color;
                box-shadow:         inset 0 0 0 1px $primary-color;
            }   
        }
        .simple-card-box__more-about {
            p{
                font-size: 1.6rem;
                font-weight: 400;
                color: #2D9CDB;
            }
            +below('mobile'){
                align-items: center;
                min-height: auto;
            }
        }
    }
}

