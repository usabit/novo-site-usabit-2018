
// Google Font: Roboto
@import url('https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900&subset=latin-ext');

html,
body {
    font-family: 'Roboto', sans-serif;
    font-size: 10px;
}

.thin{
    font-weight: 100;
}
.light{
    font-weight: 300;
}
.medium{
    font-weight: 400;
}
.medium-extra{
    font-weight: 500;
}
.bold{
    font-weight: 700;
}
.black{
    font-weight: 900;
}
strong{
    font-weight: bolder;
}
em, .italic{
    font-style: italic;
}
.uppercase{
    text-transform: uppercase;
}
.lowercase{
    text-transform: lowercase;
}
.no-wrap{
    white-space: nowrap;
}
.text-center{
    text-align: center;
}
.text-right{
    text-align: right;
}
.text-left{
    text-align: left;
}
h1{
    font-size: 4em;
}
h2{
    font-size: 3em;
}
h3{
    font-size: 2.6em;
}
h4{
    font-size: 2em;
}
h5{
    font-size: 1.6em;
}
a{
    cursor pointer
    display inline-block
    text-decoration none
    transition all 250ms
    &:hover,
    &.active,
    &:active{
        transition: all 250ms;
    }
}
