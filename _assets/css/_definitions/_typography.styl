
html,
body {
    font-family: 'Roboto', sans-serif;
    font-size: 10px;
}

.thin{
    font-weight: 100;
}
.light{
    font-weight: 300;
}
.medium{
    font-weight: 400;
}
.medium-extra{
    font-weight: 500;
}
.bold{
    font-weight: 700;
}
.black{
    font-weight: 900;
}
strong{
    font-weight: bolder;
}
em, .italic{
    font-style: italic;
}
.uppercase{
    text-transform: uppercase;
}
.lowercase{
    text-transform: lowercase;
}
.no-wrap{
    white-space: nowrap;
}
.text-center{
    text-align: center;
}
.text-right{
    text-align: right;
}
.text-left{
    text-align: left;
}
h1{
    font-size: 4rem;
}
h2{
    font-size: 3rem;
}
h3{
    font-size: 2.6rem;
}
h4{
    font-size: 2rem;
}
h5{
    font-size: 1.6rem;
}
a{
    cursor: pointer;
    display: inline-block;
    font-size: 1.6rem;
    color: #3BA0E5;
    text-decoration: none;
    transition: all 250ms;
    &.text-link{
        color: #2D9CDB;    
    }
    &:hover,
    &.active,
    &:active{
        transition: all 250ms;
        color: @color - 15%;
        &.text-link{           
            color: #2D9CDB - 25%;    
        }
    }
}
