// FRONT PAGE

// Banner intro

.banner-intro{
    //border: 1px solid green;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    min-height: 480px;
    background-image: url("../img/background/banner-intro.jpg");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    h1 {
        max-width 550px;
        color: white;
        text-shadow: 0 3px 3px rgba(0,0,0,.3)
        @media(max-width: 599px){
            font-size: 2.6rem;    
        }
    }
    h2 {
        max-width 740px;
        color: white;
        @media(max-width: 599px){
            font-size: 2.2rem;    
        }
    }
}

// Services

.services{
    //border: 1px solid blue;
    .wrapper {
        transform: translateY(-50%);
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-wrap: wrap;
        .box-services {
            min-width: 180px;
            width: 180px;
            height: 180px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 3px;
            margin: 0 10px 0 0;
            padding: 30px;
            &:nth-child(1){
                background: linear-gradient(to right, #1257BF , #3B7BDC);
            }
            &:nth-child(2){
                background: linear-gradient(to right, #6B63CC , #7D8AB8);
                @media(max-width: 430px){
                    margin-right: 0;
                }
            }
            &:nth-child(3){
                background: linear-gradient(to right, #3BBCE5 , #53B3F5);
                @media(max-width: 430px){
                    //margin-bottom: 0;
                }
            }
            &:nth-child(4){
                margin-right: 0;
                background: linear-gradient(to right, #3BA0E5 , #53B3F5);
                @media(max-width: 430px){
                    margin-bottom: 0;
                }
            }
            p {
                font-size: 1.8rem;
                color: white;
                text-align: left;
                @media(max-width: 1299px){
                    font-size: 1.5rem;
                }
            }
            @media(max-width: 860px){
                margin-bottom: 10px;    
            }
            /*
            @media(max-width: 430px){
                width: 45%;
                height: 0;
                padding-bottom: 45%;
            }
            */
            @media(max-width: 440px){
                width 100%;
                height @width;
                margin-right: 0;
                &:last-child{
                    margin-bottom: 0;
                }
            }
        }
        @media(max-width: 860px){
            transform: translateY(-90px);    
        }
        @media(max-width: 430px){
            justify-content: center;
        }
    }
}

// In featured

.featured{
    //border: 1px solid blue;
    .banner-featured{
        min-height: 350px;
        margin-top: 40px;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        background-image: url("../img/background/portal-completo.jpg");
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        p{
            max-width 392px;
            font-size: 2.6rem;
            color: #4F4F4F;
            line-height: initial;
        }
    }
}

// Technologies

.technologies{
    background-color: #2c2c2c;
    padding-top: 50px;
    padding-bottom: 50px;
    h2.title-template{
        color: white;
    }
    .technologies-description {
        color: white;
        font-size: 2.6rem;
        max-width 820px;
        margin: 30px auto 67px 0;
        @media(max-width: 767px){
            margin-bottom: 45px;    
        }
    }
    .technologies-types{
        display: flex;
        justify-content: space-between;
        align-items: center;
        div{
            flex-basis: 30%;
            text-align: center;
            img {
                @media(max-width: 767px){
                    max-width: 40%;
                }
            }
            h3, p{
                color: white;
                font-size: 2rem;
            }
            h3{
                margin: 40px auto 20px auto;
                @media(max-width: 767px){
                    margin: 20px auto;
                }
            }
            p{
                @media(max-width: 767px){
                    font-size: 1.6rem;
                    line-height: 1.3;
                }
            }
            @media(max-width: 499px){
                margin-bottom: 28px;
                &:last-child{
                    margin-bottom: 0;
                }
            }
        }
        @media(max-width: 499px){
            flex-direction: column;    
        }
    }
}

// Made in Usabit

.made-in-usabit{
    background-color: #F7F7F7;
    padding-top: 50px;
    padding-bottom: 50px;
    .usabit-posts{
        display: flex;
        justify-content: space-between;
        align-items: center;
        .post-card{
            background-color: white;
            flex-basis: 30%;
            .post-thumbnail{
                display: flex;
                width: 100%;
                max-height: 250px;
                @media(max-width: 1199px){
                    max-height: 200px;
                }
                @media(max-width: 1024px){
                    max-height: 175px;
                }
                @media (max-width: 767px){
                    max-height: 350px;
                }
                @media (max-width: 599px){
                    max-height: 300px;
                }
                @media (max-width: 499px){
                    max-height: 250px;
                }
                @media (max-width: 330px){
                    max-height: 190px;
                }
            }
            .post-content{
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: flex-start;
                width: 100%;
                min-height: 250px;
                padding-right: 20px;
                padding-left: 20px;
                h3{
                    font-size: 1.9rem;
                }
                p{
                    font-size: 1.6rem;
                }
                @media (max-width: 330px){
                    min-height: 220px;
                }
            }
            @media(max-width: 767px){
                margin-bottom: 28px;
                &:last-child {
                    margin-bottom: 0;
                }
            }
        }
        @media(max-width: 767px){
            flex-direction: column;    
        }
    }
}

// Technology Posts

.technology-posts{
    background-color: white;
    padding-top: 50px;
    padding-bottom: 50px;
    .technology-posts-boxes {
        display: flex;
        justify-content: space-between;
        align-items: center;
        .box-col{
            flex-basis: 50%;
            .box-post {
                border: 1px solid $primary-color;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: flex-start;
                height: 150px;
                padding: 20px;
                &:hover {
                    -moz-box-shadow:    inset 0 0 0 1px $primary-color;
                    -webkit-box-shadow: inset 0 0 0 1px $primary-color;
                    box-shadow:         inset 0 0 0 1px $primary-color;
                }
                &-category,
                &-title{
                    color: $text-primary;
                }
                &-category{
                    font-size: 1.4rem;
                    margin-bottom: 10px;
                }
                &-title{
                    font-size: 2rem; 
                }
                .more-about-technology{}
                &:nth-child(1){
                    margin-bottom: 28px;
                }
                @media(max-width 767px){
                    margin-bottom: 28px;
                }
            }
            &:nth-child(1) {
                margin-right: 28px;
            }
            @media(max-width 767px){
                display: block;
                margin-right: 0;
                &:nth-child(1) {
                    margin-right: 0;
                }
                &:nth-child(2) {
                    .box-post:nth-child(2) {
                        margin-bottom: 0;
                    }
                }
            }
        }
        @media(max-width 767px){
            display: block;
        }
    }
}

// Contact Bar

.contact-bar{
    background-color: white;
    padding-top: 50px;
    padding-bottom: 50px;
    .wrapper{
        display: flex;
        justify-content: space-between;
        align-items: center;
        .contact {
            &-business,
            &-office{
                display: flex;
                align-items: center;
                .contact-info-title{
                    font-size: 1.6rem;
                    margin-right: 15px;
                    @media(max-width: 1024px){
                        margin-right: 10px;    
                    }
                    i {
                        margin-right: 10px;
                        @media(max-width: 1024px){
                            margin-right: 5px;    
                        }
                    }
                }
                p.contact-info-number{
                    display: inline-block;
                    font-size: 1.6rem;
                    color: $primary-color;
                    @media(max-width: 1024px){
                        display: none;
                    }
                }
                a.contact-info-number{
                    display: none;
                    @media(max-width: 1024px){
                        display: inline-block;
                        font-size: 1.6rem;
                        color: $primary-color;
                    }
                }
                @media(max-width: 1024px){
                    margin-bottom: 20px;
                } 
            }
            &-business{
                flex-basis: 35%;  
            }
            &-office{
                flex-basis: 25%;  
            }
            &-social-network{
                display: flex;
                justify-content: flex-end;
                align-items: center;
                flex: 1;
                a{
                    width: 40px;
                    height 40px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    margin-right: 10px;
                    border-radius: 50%;
                    background-color: $text-primary;
                    i{
                        color: white;
                        font-size: 2rem;
                    }
                    &:last-child{
                        margin-right: 0;
                    }
                    &:hover,
                    &:active {
                        background-color: $text-secondary;
                    }
                    @media(max-width: 1024px){
                        width: 35px;
                        height 35px;
                        i{
                            font-size: 1.8rem;
                        }
                    }
                }
            }
        }        
        @media(max-width: 1024px){
            flex-direction: column;
        }
    }
}