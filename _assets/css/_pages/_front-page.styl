// FRONT PAGE

// Banner intro

.front-banner{
    border: 1px solid green;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    min-height: 480px;
    background-image: url("https://placehold.it/1440x480/ededed/cccccc");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    h1 {
        max-width 550px;
        @media(max-width: 1024px){}
    }
    h2 {
        max-width 740px;
        @media(max-width: 1024px){}
    }
    @media(max-width: 1024px){}
}

// Services

.front-services{
    border: 1px solid blue;
    transform: translateY(-50%);
    .wrapper {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        .box-services {
            min-width: 180px;
            width: 180px;
            height: 180px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 3px;
            margin: 0 10px 0 0;
            padding: 30px;
            &:nth-child(1){
                background: linear-gradient(to right, #1257BF , #3B7BDC);
            }
            &:nth-child(2){
                background: linear-gradient(to right, #6B63CC , #7D8AB8);
            }
            &:nth-child(3){
                background: linear-gradient(to right, #3BBCE5 , #53B3F5);
            }
            &:nth-child(4){
                margin-right: 0;
                background: linear-gradient(to right, #3BA0E5 , #53B3F5);
            }
            p {
                font-size: 1.8em;
                color: white;
                text-align: left;
                @media(max-width: 1299px){
                    font-size: 1.5em;
                }
            }
        }
    }
}

// In featured

.front-featured{
    border: 1px solid blue;
    transform: translateY(-36%);
    h2.title-template:after{
        background-color: #56CCF2;
    }
    .banner-featured{
        min-height: 350px;
        margin-top: 40px;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        background-image: url("../img/background/portal-completo.jpg");
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        p{
            max-width 392px;
            font-size: 2.6em;
            color: #4F4F4F;
            line-height: initial;
        }
    }
}

// Technologies

.front-technologies{
    background-color: #2c2c2c;
    h2.title-template{
        color: white;
        &:after{
            background-color: #56CCF2;
        }
    }
    .technologies-description {
        color: white;
        font-size: 2.6em;
        max-width 820px;
    }
    .technologies-types{
        border: 1px solid blue;
        display: flex;
        justify-content: space-between;
        align-items: center;
        div{
            border: 1px solid green;
            text-align: center;
        }
    }
}