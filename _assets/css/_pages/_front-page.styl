// FRONT PAGE

// Banner intro

.banner-intro{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    min-height: 480px;
    h1 {
        max-width: 550px;
        color: white;
        text-shadow: 0 3px 3px rgba(0,0,0,.3);
        +below('mobile'){
            font-size: 2.6rem;
        }
    }
    h2 {
        max-width: 740px;
        color: white;
        +below('mobile'){
            font-size: 2.2rem;
        }
    }
}

// Services

.services{
    display: inline-block;
    width: 100%;
    .wrapper {
        transform: translateY(-50%);
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-wrap: wrap;
        .box-services {
            /* background-image: linear-gradient(65deg, #ffffff90, #ffffff00); */
            min-width: 180px;
            width: 180px;
            height: 180px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 3px;
            margin: 0 10px 0 0;
            padding: 20px;
            /*
            &:nth-child(1){
                background: linear-gradient(to right, #1257BF , #3B7BDC);
                +below(440px){
                    margin: 0 10px 10px 0;
                }
            }
            &:nth-child(2){
                background: linear-gradient(to right, #6B63CC , #7D8AB8);
                +below(440px){
                    margin: 0 0 10px 0;
                }
            }
            &:nth-child(3){
                background: linear-gradient(to right, #3BBCE5 , #53B3F5);
                +below(440px){
                    margin: 0 10px 0 0;
                }
            }
            &:nth-child(4){
                margin-right: 0;
                background: linear-gradient(to right, #3BA0E5 , #53B3F5);
                +below(440px){
                    margin: 0 0 0 0;
                }
            }
            */
            p {
                font-size: 2.4rem;
                color: white;
                text-align: left;
                +below(440px){
                    font-size: 1.6rem;
                    transform: translateY(50px);
                }
            }
            +below(860px){
                margin-bottom: 10px;
            }
            +below(440px){
                display: inline-block;
                min-width: auto;
                width: 48%;
                height: 0;
                padding: 10px 10px @width;
            }
        }
        +below(860px){
            transform: translateY(-90px);    
        }
        +below(440px){
            justify-content: center;
        }
    }
}

// In featured

.featured{
    display: inline-block;
    width: 100%;
    .banner-featured{
        min-height: 350px;
        margin-top: 40px;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        p{
            max-width: 392px;
            font-size: 2.6rem;
            color: #4F4F4F;
            line-height: initial;
        }
    }
}

// Technologies

.technologies{
    display: inline-block;
    width: 100%;
    background-color: #2c2c2c;
    padding-top: 50px;
    padding-bottom: 50px;
    h2.title-template{
        color: white;
    }
    .technologies-description {
        color: white;
        font-size: 2.6rem;
        max-width: 820px;
        margin: 73px auto 97px 0;
        +below('small-tablet'){
            margin-bottom: 45px;    
        }
    }
    .technologies-types{
        display: flex;
        justify-content: space-between;
        align-items: center;
        div{
            flex-basis: 30%;
            text-align: center;
            img {
                +below('small-tablet'){
                    max-width: 40%;
                }
            }
            h3, p{
                color: white;
                font-size: 2rem;
            }
            h3{
                margin: 63px auto 20px auto;
            }
            p{
                margin-bottom: 10px;
                +below('small-tablet'){
                    font-size: 1.6rem;
                }
            }
            +below(500px){
                margin-bottom: 28px;
                &:last-child{
                    margin-bottom: 0;
                }
            }
        }
        +below(500px){
            flex-direction: column;    
        }
    }
}

// Made in Usabit

.made-in-usabit{
    display: inline-block;
    width: 100%;
    background-color: #F7F7F7;
    padding-top: 50px;
    padding-bottom: 50px;
    .usabit-posts{
        display: inline-block;
        a.post-card{
            background-color: white;
            width: 417px;
            column(1/3, $cycle: 3);
            img.post-thumbnail{
                display: block;
                width: 100%;
                max-height: 262px;
            }
            .post-content{
                width: 100%;
                min-height: 223px;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: flex-start;
                padding: 32px 29.9px 19px 29px;
                h3,
                p{
                    font-size: 1.6rem;
                    color: black;
                }
                h3{
                    margin-top: 0;
                }
                p{
                    max-width: 90%;
                    margin: 0;
                }
            }
            +below('tablet'){
                margin-bottom: 3%;
                column(1/2, $cycle: 2);
                &:last-child{
                    margin-bottom: 0;
                }
            }
            +below('mobile'){
                column(1, $cycle: 1);
            }
        }
    }
}

// Technology Posts

.technology-posts{
    display: inline-block;
    width: 100%;
    background-color: white;
    padding-top: 50px;
    padding-bottom: 50px;
    .technology-posts-boxes {
        display: inline-block;
        width: 100%;
        margin-top: 4.4rem;
        .box-post,
        .box-post__more-about {
            background-color: white;
            min-height: 150px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 20px;
            &:nth-child(-n+2){
                margin-bottom: 3%;
            }
            column(1/2, $cycle: 2);
            h3,
            p{
                color: #828282;
            }
            h3{
                font-size: 1.4rem;
                margin-bottom: 10px;
            }
            p{
                font-size: 2rem; 
            }
            +below('mobile'){
                margin-bottom: 3%;
                column(1, $cycle: 1);
                &:last-child{
                    margin-bottom: 0;
                }
            }
        }
        .box-post{
            border: 1px solid $primary-color;
            &:hover {
                -moz-box-shadow:    inset 0 0 0 1px $primary-color;
                -webkit-box-shadow: inset 0 0 0 1px $primary-color;
                box-shadow:         inset 0 0 0 1px $primary-color;
            }   
        }
        .box-post__more-about {
            p{
                color: #2D9CDB;
            }
            +below('mobile'){
                align-items: center;
                min-height: auto;
            }
        }
    }
}

// Contact Bar

.contact-bar{
    display: inline-block;
    width: 100%;
    background-color: white;
    padding-top: 109px;
    padding-bottom: 30px;
    .wrapper{
        display: flex;
        justify-content: space-between;
        align-items: center;
        .contact {
            &-business,
            &-office{
                display: flex;
                align-items: center;
                .contact-info-title{
                    font-size: 1.6rem;
                    margin-right: 15px;
                    +below('tablet'){
                        margin-right: 10px;    
                    }
                    i {
                        margin-right: 10px;
                        +below('tablet'){
                            margin-right: 5px;    
                        }
                    }
                }
                p.contact-info-number{
                    display: inline-block;
                    font-size: 1.6rem;
                    color: $primary-color;
                    +below('tablet'){
                        display: none;
                    }
                }
                a.contact-info-number{
                    display: none;
                    +below('tablet'){
                        display: inline-block;
                        font-size: 1.5rem;
                        color: $primary-color;
                    }
                }
                +below('tablet'){
                    margin-bottom: 20px;
                } 
            }
            &-business{
                flex-basis: 35%;  
            }
            &-office{
                flex-basis: 25%;  
            }
            &-social-network{
                display: flex;
                justify-content: flex-end;
                align-items: center;
                flex: 1;
                a{
                    width: 30px;
                    height: 30px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    margin-right: 10px;
                    border-radius: 50%;
                    background-color: #bebebe;
                    i{
                        color: white;
                        font-size: 1.6rem;
                    }
                    &:last-child{
                        margin-right: 0;
                    }
                    &:hover,
                    &:active {
                        background-color: @background-color - 30%;
                    }
                }
            }
        }        
        +below('tablet'){
            flex-direction: column;
        }
    }
}

// Footer

.footer{
    display: inline-block;
    width: 100%;
    background-color: white;
    border-top: 1px solid #BDBDBD;
    padding-top: 50px;
    padding-bottom: 50px;
    .wrapper{
        .footer-topic{
            column(1/5, $cycle: 5);
            &-title{
                height: 60px;
                h2{
                    font-size: 1.6rem;
                    color: black;
                }
                svg {
                    transform: translateY(-40%);
                }
                +below('tablet'){
                    height: 50px;
                }
                +below('mobile'){
                    height: 30px;
                }
            }
            &-list{
                li{
                    font-size: 1.6rem;
                    color: black;
                    line-height: 1.3;
                    margin-bottom: 10px;
                    a{
                        font-size: @font-size;
                        color: @color;
                        line-height: @line-height;
                    }
                    &:last-child{
                        margin-bottom: 0;
                    }
                }    
            }
            +below('tablet'){
                &:nth-child(-n+3){
                    margin-bottom: 6%;    
                }
                column(1/3, $cycle: 3);
            }
            +below('mobile'){
                &:nth-child(-n+4){
                    margin-bottom: 12%;
                }
                column(1, $cycle: 1);
            }
        }
    }
}