// FRONT PAGE

// Banner intro

.banner-intro{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    min-height: 480px;
    background-image: url("../img/background/banner-intro.jpg");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    h1 {
        max-width: 550px;
        color: white;
        text-shadow: 0 3px 3px rgba(0,0,0,.3);
        +below('mobile'){
            font-size: 2.6rem;
        }
    }
    h2 {
        max-width: 740px;
        color: white;
        +below('mobile'){
            font-size: 2.2rem;
        }
    }
}

