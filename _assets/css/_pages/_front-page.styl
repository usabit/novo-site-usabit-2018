// FRONT PAGE

// Banner intro

.banner-intro{
    //border: 1px solid green;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    min-height: 480px;
    background-image: url("../img/background/banner-intro.jpg");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    h1 {
        max-width 550px;
        color: white;
        text-shadow: 0 3px 3px rgba(0,0,0,.3)
        @media(max-width: 1024px){}
    }
    h2 {
        max-width 740px;
        color: white;
        @media(max-width: 1024px){}
    }
    @media(max-width: 1024px){}
}

// Services

.services{
    //border: 1px solid blue;
    .wrapper {
        transform: translateY(-50%);
        display: flex;
        justify-content: flex-start;
        align-items: center;
        .box-services {
            min-width: 180px;
            width: 180px;
            height: 180px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 3px;
            margin: 0 10px 0 0;
            padding: 30px;
            &:nth-child(1){
                background: linear-gradient(to right, #1257BF , #3B7BDC);
            }
            &:nth-child(2){
                background: linear-gradient(to right, #6B63CC , #7D8AB8);
            }
            &:nth-child(3){
                background: linear-gradient(to right, #3BBCE5 , #53B3F5);
            }
            &:nth-child(4){
                margin-right: 0;
                background: linear-gradient(to right, #3BA0E5 , #53B3F5);
            }
            p {
                font-size: 1.8rem;
                color: white;
                text-align: left;
                @media(max-width: 1299px){
                    font-size: 1.5rem;
                }
            }
        }
    }
}

// In featured

.featured{
    //border: 1px solid blue;
    h2.title-template:after{
        background-color: #56CCF2;
    }
    .banner-featured{
        min-height: 350px;
        margin-top: 40px;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        background-image: url("../img/background/portal-completo.jpg");
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        p{
            max-width 392px;
            font-size: 2.6rem;
            color: #4F4F4F;
            line-height: initial;
        }
    }
}

// Technologies

.technologies{
    background-color: #2c2c2c;
    padding-top: 50px;
    padding-bottom: 50px;
    h2.title-template{
        color: white;
        &:after{
            background-color: #56CCF2;
        }
    }
    .technologies-description {
        color: white;
        font-size: 2.6rem;
        max-width 820px;
        margin: 30px auto 67px 0;
    }
    .technologies-types{
        //border: 1px solid blue;
        display: flex;
        justify-content: space-between;
        align-items: center;
        div{
            //border: 1px solid green;
            flex-basis: 30%;
            text-align: center;
            h3, p{
                color: white;
                font-size: 2rem;
            }
            h3{
                margin: 40px auto 20px auto;
            }
        }
    }
}

// Made in Usabit

.made-in-usabit{
    background-color: #F7F7F7;
    padding-top: 50px;
    padding-bottom: 50px;
    h2.title-template{
        color: black;
        &:after{
            background-color: #56CCF2;
        }
    }
    .usabit-posts{
        //border: 1px solid blue;
        display: flex;
        justify-content: space-between;
        align-items: center;
        .post-card{
            //border: 1px solid green;
            background-color: white;
            flex-basis: 30%;
            .post-thumbnail{
                //border: 2px solid red;
                display: flex;
                width: 100%;
                max-height: 200px;
            }
            .post-content{
                //border: 2px dashed red;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: flex-start;
                width: 100%;
                height: 200px;
                padding-right: 20px;
                padding-left: 20px;
                h3{
                    font-size: 1.9rem;
                }
                p{
                    font-size: 1.6rem;
                }
            }
        }
    }
}