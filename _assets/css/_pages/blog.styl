
// OPEN POST

.open-post{
    .wrapper{
        display: none;
        margin-top: 97px;
        .open-post-title{
            max-width: 1240px;
            font-size: 4rem;
            font-weight: 300;
            color: #000000;
        }
    }
}

// SINGLE POST

.single-post{
    margin-top: 52px;
    .wrapper{
        .single-post-content{
            max-width: 1024px;
            .spc-date-and-comment-list,
            .spc-tags-list{
                display: flex;
                flex-wrap: wrap;
                width: 100%;
                list-style-type: none;
                .spc-tags-list-item{
                    a{
                        font-size: 1.8rem;
                        font-weight: 300;
                        line-height: 1.2;
                        color: #3BA0E5;
                    }
                    &:last-child{
                        margin-right: 0;
                    }
                }
            }
            .spc-date-and-comment-list{
                margin-bottom: 10px;
                .spc-date-and-comment-list-item{
                    font-size: 1.8rem;
                    font-weight: 300;
                    color: #000000;
                    line-height: 1.2;
                    margin-right: 21px;
                }
            }
            .spc-tags-list{
                margin-top: 30px;
                margin-bottom: 39px;
                .spc-tags-list-item{
                    margin-right: 16px;
                }
            }
            .spc-title{
                max-width: 613px;
                font-size: 4rem;
                font-weight: 300;
                margin-left: -2px;
            }
            .spc-subtitle,
            .spc-paragraph{
                max-width: 768px;
                font-size: 1.8rem;
                color: #000000;
            }
            .spc-subtitle{
                font-weight: 700;
                margin-bottom: 2.3rem;
            }
            .spc-paragraph{
                font-weight: 300;
            }
            .spc-campaign-banner{
                min-height: 118px;
                margin-top: 45px;
                margin-bottom: 65px;
            }
            .spc-content-banner{
                max-width: 768px;
                margin-top: 55px;
                margin-bottom: 70px;
                figcaption{
                    font-size: 1.6rem;
                    font-style: italic;
                    font-weight: 300;
                    color: #000000;
                    margin-top: 12px;
                }
            }
            .spc-author{
                border-top: 1px solid #BDBDBD;
                max-width: 768px;
                display: flex;
                justify-content: flex-start;
                align-items: center;
                padding-top: 29px;
                margin-top: 50px;
                margin-bottom: 29px;
                .spc-author-avatar{
                    width: 70px;
                    height: 70px;
                    margin-right: 22px;
                    border-radius: 50%;
                }
                .spc-author-info{
                    flex: 1;
                    .spc-author-info-name,
                    .spc-author-info-profession{
                        color: #000000;
                    }
                    .spc-author-info-name{
                        font-size: 1.6rem;
                        font-weight: 400;
                        margin-bottom: 3px;
                    }
                    .spc-author-info-profession{
                        font-size: 1.4rem;
                        font-style: italic;
                        line-height: 1.2;
                    }
                }
            }
        }
    }
}