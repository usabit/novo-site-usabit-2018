
// Landing: APPLICATIONS

// Banner App
.banner-app{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: calc(100vh - 50px);
    //background-attachment: fixed;
    .banner-app-container{
        display: flex;
        align-items: center;
        padding-right: 30px;
        .screens-and-carcass{
            width: 308px;
            height: 586px;
            margin-right: 50px;
            position: relative;
            .the-carcass{
                position: absolute;
                z-index: 2;
                .the-carcass-img{
                    +below('mobile'){
                        width: 250px;
                        height: 460px;
                    }
                }
                +below('mobile'){
                    left: 40px;
                }
            }
            .the-screen{
                position: absolute;
                top: 16px;
                left: 19px;
                overflow: hidden;
                z-index: 1;
                .the-screen-img{
                    width: 237px;
                    height: 515px;
                    +below('mobile'){
                        width: 195px;
                        height: 410px;
                    }
                }
                +below('mobile'){
                    top: 12px;
                    left: 55px;
                }
            }
            +below('tablet'){
                margin-right: 20px;
            }
            +below('mobile'){
                margin-right: 0;
            }
        }
        .banner-app-content{
            flex: 1;
            svg {
                width: 70px;
                height: 22px; 
                fill: none;
            }
            h2{
                font-size: 4rem;
                font-weight: 400;
                color: #FFFFFF;
                line-height: 1.3;
                max-width: 510px;
                margin-top: 35px;
                +below('tablet'){
                    font-size: 2.8rem;
                }
                +below('mobile'){
                    margin-top: 25px;
                }
            }
            p{
                font-size: 2.4rem;
                font-weight: 300;
                color: #FFFFFF;
                line-height: 1.2;
                max-width: 585px;
                margin-top: 35px;
                +below('tablet'){
                    font-size: 2rem;
                }
                +below('mobile'){
                    margin-top: 25px;
                }
            }
            a{
                margin-top: 35px;
            }
            +below('mobile'){
                margin-top: -80px;
                text-align: center !important;
            } 
        }
        +below('mobile'){
            flex-direction: column;
            padding: 100px 28px;
        }
    }
    +below('mobile'){
        height: auto;
    }
}